<% layout('layouts/boilerplate') -%>
<h1> Posts Index </h1>
<% posts.forEach((post)=>{ %>
    <div>
        <h2><%= post.title %></h2>
        <div> Price <%= post.price %></div>
        <div> Description <%= post.description %></div>
        <div> Location <%= post.location %></div>
        <div><a href="/posts/<%=post.id%>">Show more</a></div>
    </div>
<%})%>
